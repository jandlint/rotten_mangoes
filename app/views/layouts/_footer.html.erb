<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path, method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
    <% if session[:admin_id] %>
      <p>Session admin_id: <%= session[:admin_id] %></p>
      <%= link_to "Admin Menu", admin_users_path %>
    <% end %>
    <%= link_to "Front Page", movies_path%>
    <% if (session[:user_id].to_i != session[:admin_id].to_i) && session[:admin_id] %>
    <%= link_to "Return to yourself", "/admin/change_users/#{session[:admin_id]}" %>
    <% end %>

  </small>
</footer>